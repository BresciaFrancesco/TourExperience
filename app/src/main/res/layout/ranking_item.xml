<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_ranking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/all_rounded"
            android:backgroundTint="@color/white">
            <TextView
                android:id="@+id/pos_item_classifica"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:padding="10dp"
                android:text="1"
                android:textSize="20dp"
                android:textStyle="italic|bold"
                android:gravity="center"
                android:textColor="@color/main_blue"
                android:background="@drawable/textview_circle_border"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nome_item_classifica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/main_blue"
                android:layout_marginLeft="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toEndOf="@id/pos_item_classifica"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:dividerColor="@color/main_blue"
        android:layout_marginHorizontal="12dp"
        app:dividerThickness="8dp"
        app:layout_constraintTop_toBottomOf="@id/layout_ranking"/>
</androidx.constraintlayout.widget.ConstraintLayout>